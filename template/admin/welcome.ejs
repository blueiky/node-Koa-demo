<script>

    var timer = document.getElementById('timer');
    function getTime() {
        var date = new Date()
        var year = date.getFullYear();
        var mon = date.getMonth() + 1;
        var day = date.getDate();
        var hour = date.getHours();
        var min = date.getMinutes();
        var sec = date.getSeconds();
        mon = changTime(mon)
        day = changTime(day)
        hour = changTime(hour)
        min = changTime(min)
        sec = changTime(sec)
        timer.innerHTML = `当前时间:${year}-${mon}-${day} ${hour}:${min}:${sec}`;
    };
    function changTime(t) {
        if (t < 10) {
            t = '0' + t;
        }
        return t;
    }

    setInterval(() => {
        getTime()
    }, 1000);

</script>

